{
  "manifest_version": 3,
  "name": "EasyForm",
  "version": "1.1.4",
  "description": "Automatically fill forms based on page content analysis",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "storage",
    "clipboardRead",
    "theme"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background-unified.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "content/actions.js", "content/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "analyze-page": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "Command+F"
      },
      "description": "Analyze page and execute form filling"
    },
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+O",
        "mac": "Command+O"
      },
      "description": "Toggle EasyForm overlay (manual mode)"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "easyform@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
